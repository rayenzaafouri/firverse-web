{% extends 'base.html.twig' %}

{% block title %}Daily Nutrition{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="mb-0">Daily Nutrition Records</h1>
                    <div>
                        <a href="{{ path('app_recipe_index') }}" class="btn btn-info me-2">Check Recipes</a>
                        <a href="{{ path('app_food_view_only') }}" class="btn btn-primary">Food</a>
                    </div>
                </div>
                <div class="text-center mb-4">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for nutrition in nutritions %}
                                <tr>
                                    <td>{{ nutrition.date|date('Y-m-d') }}</td>
                                    <td>
                                        {% set hasItems = false %}
                                        {% for food in nutrition.foods %}
                                            <span class="badge bg-primary">{{ food.name }}</span>
                                            {% set hasItems = true %}
                                        {% endfor %}
                                        {% for recipe in nutrition.recipes %}
                                            <span class="badge bg-success">{{ recipe.name }}</span>
                                            {% set hasItems = true %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_daily_nutrition_show', {'date': nutrition.date|date('Y-m-d')}) }}" 
                                           class="btn btn-sm btn-info">
                                            View Details
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">No nutrition records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 