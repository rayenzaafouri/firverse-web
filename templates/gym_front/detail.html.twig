{% extends 'base.html.twig' %}

{% block title %}Détails - {{ gym.name }}{% endblock %}

{% block body %}
<div class="container py-4">
    <h2 class="mb-3">{{ gym.name }}</h2>
    <img src="{{ asset('uploads/gym_images/' ~ gym.image) }}" alt="{{ gym.name }}" class="img-fluid mb-3" style="max-width: 400px;">

    <ul class="list-group">
        <li class="list-group-item"><strong>Adresse :</strong> {{ gym.adresse }}</li>
        <li class="list-group-item"><strong>Téléphone :</strong> {{ gym.phone }}</li>
        <li class="list-group-item"><strong>Email :</strong> {{ gym.email }}</li>
        <li class="list-group-item"><strong>Capacité :</strong> {{ gym.capacity }}</li>
        <li class="list-group-item"><strong>Note :</strong> {{ gym.rating }}</li>
        <li class="list-group-item"><strong>Créée le :</strong> {{ gym.createdAt ? gym.createdAt|date('Y-m-d H:i') : 'N/A' }}</li>
    </ul>

    <a href="{{ path('gym_front_list') }}" class="btn btn-secondary mt-3">← Retour à la liste</a>
</div>
{% endblock %}
