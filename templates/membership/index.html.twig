{% extends 'base.html.twig' %}

{% block title %}Admin - Memberships{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .no-results {
        display: none;
        text-align: center;
        padding: 20px;
    }
</style>
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}

    <div class="container py-5">
        <h1 class="mb-4">Manage Memberships</h1>

        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Search Bar and Status Filter #}
        <div class="mb-3 d-flex justify-content-between">
            <div class="input-group w-50">
                <input type="text" class="form-control" id="searchById" placeholder="Search by Membership ID" onkeyup="searchMemberships()">
            </div>
            <div class="d-flex align-items-center">
                <label for="statusFilter" class="mr-2">Filter by Status:</label>
                <select class="form-select" id="statusFilter" onchange="filterByStatus()">
                    <option value="">All</option>
                    <option value="active">Active</option>
                    <option value="expired">Expired</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
        </div>

        <div class="mb-3">
            <a href="{{ path('app_membership_new') }}" class="btn btn-success">+ Add New Membership</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered text-center" id="membershipTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Actions</th>
                        <th>ID</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Price</th>
                        <th>Coaching</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                {% for membership in memberships %}
                    <tr data-status="{{ membership.status|lower }}">
                        <td>
                            <div class="d-flex flex-column align-items-center gap-2">
                                <a href="{{ path('app_membership_show', {'id': membership.id}) }}" class="btn btn-sm btn-primary w-75">View</a>
                                <a href="{{ path('app_membership_edit', {'id': membership.id}) }}" class="btn btn-sm btn-warning w-75">Edit</a>
                                <button class="btn btn-sm btn-danger w-75"
                                        onclick="openDeleteModal('{{ path('app_membership_delete', {'id': membership.id}) }}', '{{ csrf_token('delete' ~ membership.id) }}')">
                                    Delete
                                </button>
                            </div>
                        </td>
                        <td>{{ membership.id }}</td>
                        <td>{{ membership.startDate ? membership.start_date|date('Y-m-d') : '' }}</td>
                        <td>{{ membership.endDate ? membership.end_date|date('Y-m-d') : '' }}</td>
                        <td>{{ membership.price }}</td>
                        <td>{{ membership.coaching ? 'Yes' : 'No' }}</td>
                        <td>{{ membership.status }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-muted">No memberships found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this membership?
                </div>
                <div class="modal-footer">
                    <form id="deleteMembershipForm" method="post">
                        <input type="hidden" name="_token" id="deleteMembershipToken" value="">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Function to search by Membership ID (advanced search, dynamic typing)
        function searchMemberships() {
            let searchTerm = document.getElementById('searchById').value.toLowerCase();
            let rows = document.querySelectorAll('#membershipTable tbody tr');
            rows.forEach(row => {
                let membershipId = row.cells[1].textContent.toLowerCase();
                if (membershipId.includes(searchTerm)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        // Function to filter by Membership status (active, expired, inactive)
        function filterByStatus() {
            let selectedStatus = document.getElementById('statusFilter').value.toLowerCase();
            let rows = document.querySelectorAll('#membershipTable tbody tr');
            rows.forEach(row => {
                let membershipStatus = row.getAttribute('data-status');
                if (selectedStatus === "" || membershipStatus === selectedStatus) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        }

        // Function to open delete modal
        function openDeleteModal(actionUrl, csrfToken) {
            const form = document.getElementById('deleteMembershipForm');
            form.action = actionUrl;
            document.getElementById('deleteMembershipToken').value = csrfToken;
            $('#deleteConfirmModal').modal('show');
        }
    </script>
{% endblock %}
