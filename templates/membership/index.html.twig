{% extends 'base.html.twig' %}

{% block title %}Membership index{% endblock %}

{% block body %}
    <h1>Membership index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Price</th>
                <th>Coaching</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for membership in memberships %}
            <tr>
                <td>{{ membership.id }}</td>
                <td>{{ membership.startDate ? membership.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ membership.endDate ? membership.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ membership.price }}</td>
                <td>{{ membership.coaching ? 'Yes' : 'No' }}</td>
                <td>{{ membership.status }}</td>
                <td>
                    <a href="{{ path('app_membership_show', {'id': membership.id}) }}">show</a>
                    <a href="{{ path('app_membership_edit', {'id': membership.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_membership_new') }}">Create new</a>
{% endblock %}
