{% extends 'base.html.twig' %}

{% block title %}Membership{% endblock %}

{% block body %}
    <h1>Membership</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ membership.id }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ membership.startDate ? membership.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ membership.endDate ? membership.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ membership.price }}</td>
            </tr>
            <tr>
                <th>Coaching</th>
                <td>{{ membership.coaching ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ membership.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_membership_index') }}">back to list</a>

    <a href="{{ path('app_membership_edit', {'id': membership.id}) }}">edit</a>

    {{ include('membership/_delete_form.html.twig') }}
{% endblock %}
