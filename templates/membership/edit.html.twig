{% extends 'base.html.twig' %}

{% block title %}Modifier l'abonnement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-section {
            background-color: #f1f8f2;
            padding: 30px;
            border-radius: 15px;
            color: #343a40;
            border: 2px solid #28a745;
        }

        .form-section h1 {
            color: #28a745;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-label {
            font-weight: bold;
            color: #333;
        }

        .form-control {
            background-color: #ffffff;
            color: #495057;
            border: 1px solid #28a745;
            border-radius: 5px;
        }

        .form-control::placeholder {
            color: #6c757d;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn:hover {
            opacity: 0.8;
        }

        .form-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .form-row {
            display: flex;
            justify-content: space-between;
        }

        .form-row .col {
            width: 48%;
        }

        .alert {
            border-radius: 5px;
        }

        .form-buttons {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            margin-top: 30px;
        }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #28a745;
            color: white;
        }

        .table td {
            background-color: #f8f9fa;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}

    <div class="container py-5" style="max-width: 800px;">
        <h1 class="text-center mb-4 text-white">Modifier l'abonnement</h1>

        <div class="form-section">
            <h1>Détails de l'abonnement</h1>

            {# Affichage des alertes de succès ou d'échec #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <table class="table">
                <thead>
                    <tr>
                        <th>Champ</th>
                        <th>Détail</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Date de début</td>
                        <td>
                            {{ form_widget(form.start_date, {'attr': {'class': 'form-control'}}) }}
                            {% if form.start_date.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {{ form_start(form.start_date) }}
                                    {% for error in form.start_date.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                    {{ form_end(form.start_date) }}
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td>Date de fin</td>
                        <td>
                            {{ form_widget(form.end_date, {'attr': {'class': 'form-control'}}) }}
                            {% if form.end_date.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {% for error in form.end_date.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td>Prix</td>
                        <td>
                            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                            {% if form.price.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {% for error in form.price.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td>Coaching</td>
                        <td>
                            {{ form_widget(form.coaching, {'attr': {'class': 'form-control'}}) }}
                            {% if form.coaching.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {% for error in form.coaching.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td>Statut</td>
                        <td>
                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            {% if form.status.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {% for error in form.status.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td>Utilisateur</td>
                        <td>
                            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                            {% if form.user.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {% for error in form.user.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <td>Salle de sport</td>
                        <td>
                            {{ form_widget(form.gym, {'attr': {'class': 'form-control'}}) }}
                            {% if form.gym.vars.errors|length > 0 %}
                                <div class="alert alert-danger mt-2">
                                    {% for error in form.gym.vars.errors %}
                                        <p>{{ error.message }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="form-buttons mt-4">
                <button type="submit" class="btn btn-primary">Modifier</button>
                <a href="{{ path('app_membership_index') }}" class="btn btn-info">Retour</a>
                {{ include('membership/_delete_form.html.twig') }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
