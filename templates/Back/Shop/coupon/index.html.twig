{% extends 'base.html.twig' %}

{% block title %}Manage Coupons{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

<div class="container py-5">
    <h1 class="mb-4">Coupons</h1>

    <a href="{{ path('app_coupon_new') }}" class="btn btn-success mb-3">+ Create New Coupon</a>

    <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
                <th>Actions</th>
                <th>Code</th>
                <th>Discount %</th>
                <th>Valid From</th>
                <th>Valid Until</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {% for coupon in coupons %}
                <tr>
                <td>
                        <a href="{{ path('app_coupon_show', {'id': coupon.id}) }}" class="btn btn-sm btn-primary mr-1">View</a>
                        <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}" class="btn btn-sm btn-warning mr-1">Edit</a>

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal{{ coupon.id }}">
                          Delete
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal{{ coupon.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel{{ coupon.id }}" aria-hidden="true">
                          <div class="modal-dialog" role="document">
                            <div class="modal-content">
                              <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="deleteModalLabel{{ coupon.id }}">Confirm Delete</h5>
                                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                Are you sure you want to delete the coupon <strong>{{ coupon.code }}</strong>?
                              </div>
                              <div class="modal-footer">
                                <form method="post" action="{{ path('app_coupon_delete', {'id': coupon.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coupon.id) }}">
                                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                </form>
                              </div>
                            </div>
                          </div>
                        </div>

                    </td>
                    <td>{{ coupon.code }}</td>
                    <td>{{ coupon.discount_percentage }}</td>
                    <td>{{ coupon.valid_from|date('Y-m-d H:i') }}</td>
                    <td>{{ coupon.valid_until|date('Y-m-d H:i') }}</td>
                    <td>
                        {% if coupon.is_active %}
                            <span class="badge badge-success">Active</span>
                        {% else %}
                            <span class="badge badge-secondary">Inactive</span>
                        {% endif %}
                    </td>
                    
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-muted text-center">No coupons found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
