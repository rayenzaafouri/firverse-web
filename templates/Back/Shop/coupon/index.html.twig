{% extends 'base.html.twig' %}

{% block title %}Manage Coupons{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
{{ include('Back/Shop/coupon/_delete_form.html.twig') }}

<div class="container py-5">
    <h1 class="mb-4">Coupons</h1>

    <a href="{{ path('app_coupon_new') }}" class="btn btn-success mb-3">+ Create New Coupon</a>

    <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
                <th>Actions</th>
                <th>Code</th>
                <th>Discount %</th>
                <th>Valid From</th>
                <th>Valid Until</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {% for coupon in coupons %}
                <tr>
                <td class="d-flex justify-content-center">
                        <a href="{{ path('app_coupon_show', {'id': coupon.id}) }}" class="btn btn-sm btn-primary mr-1">View</a>
                        <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}" class="btn btn-sm btn-warning mr-1">Edit</a>
                         {{ include('Back/Shop/coupon/_delete_form.html.twig') }}
                    </td>
                    <td>{{ coupon.code }}</td>
                    <td>{{ coupon.discountPercentage }}</td>
                    <td>{{ coupon.validFrom|date('Y-m-d H:i') }}</td>
                    <td>{{ coupon.validUntil|date('Y-m-d H:i') }}</td>
                    <td>
                        {% if coupon.isActive %}
                            <span class="badge badge-success">Active</span>
                        {% else %}
                            <span class="badge badge-secondary">Inactive</span>
                        {% endif %}
                    </td>
                    
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-muted text-center">No coupons found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
