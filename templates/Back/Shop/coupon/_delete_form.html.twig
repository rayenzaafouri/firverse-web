{% if coupons and coupon.id is defined %}
    <form method="post" action="{{ path('app_coupon_delete', {'id': coupon.id}) }}" onsubmit="return confirm('Are you sure you want to delete this coupon?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coupon.id) }}">
        <button class="btn btn-sm btn-danger">Delete</button>
    </form>
{% else %}
    <p class="text-danger">Invalid coupon data.</p>
{% endif %}