{% extends 'base.html.twig' %}

{% block title %}View Product{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

<div class="container py-5">

    <h1 class="mb-4 text-center">Product Details</h1>

    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ product.imageUrl }}" class="img-fluid img-thumbnail" alt="{{ product.name }}">
            </div>
            <div class="col-md-8">
                <h3>{{ product.name }}</h3>
                <p class="text-muted">{{ product.brand }}</p>
                <p>{{ product.description }}</p>

                <div class="my-3">
                    <span class="badge badge-primary">Price: {{ product.price|number_format(2) }} TND</span>
                </div>

                <div class="my-3">
                    <span class="badge badge-info">Stock: {{ product.stock }}</span>
                </div>

                <div class="my-3">
                    <span class="badge badge-secondary">Category: {{ product.category.name }}</span>
                </div>

                <div class="mt-4">
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning mr-2">Edit</a>
                    <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
