{% extends 'base.html.twig' %}

{% block title %}Admin - Categories{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
{{ include('Back/Shop/category/_delete_form.html.twig') }}

<div class="container py-5">
    <h1 class="mb-4">Manage Categories</h1>

    <div class="mb-3">
        <a href="{{ path('app_category_new') }}" class="btn btn-success">+ Add New Category</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>Actions</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
            {% for category in category %}
                <tr>
                    <td class="d-flex justify-content-center">
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-sm btn-primary mr-1">View</a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning mr-1">Edit</a>
                        {{ include('Back/Shop/category/_delete_form.html.twig') }}
                    </td>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{{ category.description }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-muted">No categories found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
