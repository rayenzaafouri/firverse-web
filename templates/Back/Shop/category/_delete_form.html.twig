{% if category and category.id is defined %}
    <!-- Delete Button (opens Modal) -->
    <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal{{ category.id }}">
        Delete
    </button>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal{{ category.id }}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel{{ category.id }}" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel{{ category.id }}">Confirm Deletion</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    Are you sure you want to delete the category "<strong>{{ category.name }}</strong>"?
                </div>

                <div class="modal-footer">
                    <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
{% else %}
{% endif %}
