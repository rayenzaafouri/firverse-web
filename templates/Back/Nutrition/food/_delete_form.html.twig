<form method="post" action="{{ path('app_food_delete', {'id': food.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ food.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash"></i> Delete
    </button>
</form>
