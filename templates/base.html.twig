<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Fitverse{% endblock %}</title>
        <link rel="icon" href="favicon.ico">

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <!-- Google fonts -->
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">   
            <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Mulish:ital,wght@0,200..1000;1,200..1000&family=Train+One&display=swap" rel="stylesheet">
  
            <!-- Bootstrap -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
  
            <!-- Font awesome -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

            <link rel="stylesheet" href="{{ asset('styles/navbar.css') }}"/>
        {% endblock %}

        {% block stylesheets %}
        <style>
            * {
                font-family: "Mulish", sans-serif;
                font-optical-sizing: auto;
                font-style: normal;
            }

            body {
                background-color: #f8f9fa;
                color: #212529;
                min-height: 100vh;
            }

            /* Form styles */
            .form-control,
            .form-select,
            .form-check-input {
                background-color: white;
                color: #495057;
                border: 1px solid #ced4da;
            }

            .form-control:focus,
            .form-select:focus,
            .form-check-input:focus {
                background-color: white;
                border-color: #80bdff;
                color: #495057;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }

            .form-check-input:checked {
                background-color: #007bff;
                border-color: #007bff;
            }

            .form-label {
                color: #495057;
                font-weight: 500;
            }

            /* Button styles */
            .btn-fitverse {
                background-color: #89b55a;
                border-color: #89b55a;
                color: white;
                transition: all 0.3s ease;
            }

            .btn-fitverse:hover {
                background-color: #7aa84d;
                border-color: #7aa84d;
                transform: translateY(-1px);
            }

            /* Card styles */
            .card {
                background-color: white;
                border-color: #dee2e6;
                color: #212529;
            }

            /* Table styles */
            .table {
                color: #212529;
            }

            .table th {
                background-color: #f8f9fa;
                border-color: #dee2e6;
            }

            .table td {
                border-color: #dee2e6;
            }

            .table-striped tbody tr:nth-of-type(odd) {
                background-color: rgba(0, 0, 0, 0.02);
            }

            .table-hover tbody tr:hover {
                background-color: rgba(0, 0, 0, 0.05);
            }

            /* Alert styles */
            .alert {
                background-color: white;
                border-color: #dee2e6;
                color: #212529;
            }

            .text-muted {
                color: #6c757d !important;
            }

            /* Custom container for forms */
            .form-container {
                background-color: white;
                border-radius: 0.5rem;
                padding: 2rem;
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
                margin: 2rem auto;
                max-width: 800px;
            }
        </style>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>