{# templates/reclamation/stats.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Reclamation Status Statistics{% endblock %}
{% block stylesheets %}
<style>
  .stats-container { width:80%;max-width:700px;margin:3rem auto;background:#fff;padding:2rem;border-radius:8px;box-shadow:0 2px 8px rgba(0,0,0,0.1); }
  .stats-header { display:flex;justify-content:space-between;align-items:center;margin-bottom:2rem; }
  .stats-header h1 { margin:0;font-size:1.8rem;color:#2d3e50; }
  .btn-return { background:#3498db;color:#fff;padding:.6rem 1rem;text-decoration:none;border-radius:4px;transition:background .2s; }
  .btn-return:hover { background:#2980b9; }
  .chart-container { position:relative;height:400px; }
</style>
{% endblock %}
{% block body %}
<div class="stats-container">
  <div class="stats-header">
    <h1>Reclamation Status</h1>
    <a href="{{ path('app_admin_reclamation_index') }}" class="btn-return">Return to List</a>
  </div>
  <div class="chart-container">
    <canvas id="recChart"></canvas>
  </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded',function(){
  const ctx = document.getElementById('recChart').getContext('2d');
  new Chart(ctx,{
    type:'pie',
    data:{
      labels:{{ labels|raw }},
      datasets:[{ data:{{ data|raw }}, backgroundColor:['#27ae60','#f39c12'] }]
    },
    options:{ responsive:true, plugins:{ legend:{ position:'bottom' } } }
  });
});
</script>
{% endblock %}
