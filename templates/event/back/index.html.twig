{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
<div class="container event-container" style="text-align: center; background-color: #1e1e1e; color: #e0e0e0;">
    <h2 style="color: #92ff44;">All Events</h2>

    <div class="event-form-container">
        <div class="table-responsive">
            <table class="table table-dark table-hover" style="background-color: #121212; border-color: #444;">
                <thead>
                    <tr>
                        <th style="background-color: #2d2d2d; color: #92ff44;">ID</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Name</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Description</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Location</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Date</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Time</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Price</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Organizer</th>
                        <th style="background-color: #2d2d2d; color: #92ff44;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.name }}</td>
                        <td>{{ event.description|length > 50 ? event.description|slice(0, 50) ~ '...' : event.description }}</td>
                        <td>{{ event.location }}</td>
                        <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                        <td>{{ event.time }}</td>
                        <td>{{ event.price }} Dt</td>
                        <td>{{ event.user ? event.user.email : 'Unknown' }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_event_show', {'id': event.id}) }}" 
                                   class="btn btn-sm" style="background-color: #92ff44; color: #1a1a1a;">Show</a>
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" 
                                   class="btn btn-sm btn-outline-secondary" style="border-color: #92ff44; color: #92ff44;">Edit</a>
                            <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this event?');" 
                                      style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                    <button class="btn btn-sm" style="background-color: #ff4d4d; color: white;">Delete</button>
                                </form>
                           
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center py-4">
                            <div class="alert alert-dark" style="background-color: #2d2d2d; border-color: #444; color: #e0e0e0;">
                                No events found
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-end mt-3">
    <a href="{{ path('app_event_new') }}" class="btn" style="background-color: #92ff44; color: #1a1a1a;">
        <i class="fas fa-plus"></i> Create New Event
    </a>
</div>
<div class="text-end mt-4">
    <a href="{{ path('app_participation_index') }}" class="btn" style="background-color: #92ff44; color: #1a1a1a;">
        <i class="fas fa-plus"></i> Show Participations
    </a>
</div>

    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
    /* Dark theme container styling */
    .event-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
    }

    /* Dark table styling */
    .table-dark {
        background-color: #121212;
        color: #e0e0e0;
        border-radius: 8px;
        overflow: hidden;
    }

    .table-dark th {
        border-color: #444;
    }

    .table-dark td {
        border-color: #444;
        vertical-align: middle;
    }

    .table-dark.table-hover tbody tr:hover {
        background-color: rgba(146, 255, 68, 0.1);
    }

    /* Button styling */
    .btn-group .btn {
        transition: all 0.3s ease;
    }

    .btn-group .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .event-container {
            padding: 20px;
        }
        
        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }
        
        .table th, .table td {
            padding: 8px 10px;
            font-size: 0.9em;
        }
        
        .btn-group {
            flex-direction: column;
            gap: 3px;
        }
    }
</style>
{% endblock %}