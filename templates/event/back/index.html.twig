{% extends 'back/admin/dashboard-skeleton.html.twig' %}

{% block title %}Events{% endblock %}

{% block header %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="">Events</a>
        </li>
    </ol>
</nav>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script></script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .table {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        transition: all 0.3s ease;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
    }

    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }

    .btn:active {
        transform: scale(1);
    }

    .btn i {
        margin-right: 8px;
        transition: transform 0.3s ease;
    }

    .btn:hover i {
        transform: rotate(40deg);
    }

    /* Additional custom styles */
    .table-dark {
        background-color: #121212;
        color: #e0e0e0;
        border-radius: 8px;
    }

    .table-dark th {
        background-color: #2d2d2d;
        color: #92ff44;
    }

    .table-dark.table-hover tbody tr:hover {
        background-color: rgba(146, 255, 68, 0.1);
    }

    .btn-group .btn {
        transition: all 0.3s ease;
    }

    .btn-group .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }
</style>
{% endblock %}

{% block content %}
<a class="btn btn-secondary" href="{{ path('app_event_new') }}"><i class="fa-solid fa-plus"></i> Create new Event</a>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Date</th>
            <th>Time</th>
            <th>Price</th>
            <th>Organizer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.name }}</td>
                <td>{{ event.description|length > 50 ? event.description|slice(0, 50) ~ '...' : event.description }}</td>
                <td>{{ event.location }}</td>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                <td>{{ event.time }}</td>
                <td>{{ event.price }} Dt</td>
                <td>{{ event.user ? event.user.email : 'Unknown' }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Event Actions">
                        <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-sm" style="background-color: #92ff44; color: #1a1a1a; margin-right: 10px;">
                            <i class="fas fa-eye"></i> Show
                        </a>
                        
                        <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-sm btn-outline-secondary" style="border-color: #92ff44; color: #92ff44; margin-right: 10px;">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        
                        <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this event?');" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                            <button class="btn btn-sm" style="background-color: #ff4d4d; color: white;">
                                <i class="fas fa-trash-alt"></i> Delete
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9" class="text-center py-4">
                    <div class="alert alert-dark" style="background-color: #2d2d2d; border-color: #444; color: #e0e0e0;">
                        No events found
                    </div>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<div class="text-end mt-3">
    <a href="{{ path('app_participation_index') }}" class="btn" style="background-color: #92ff44; color: #1a1a1a;">
        <i class="fas fa-users"></i> Show Participations
    </a>
</div>
{% endblock %}
