{% extends 'base.html.twig' %}

{% block title %}Admin - Events{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .action-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        flex-wrap: nowrap;
    }

    .btn {
        border-radius: 6px;
        transition: all 0.2s ease-in-out;
        font-size: 0.9rem;
        padding: 0.4rem 0.75rem;
    }

    .btn i {
        margin-right: 6px;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table th {
        background-color: #f8f9fa;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .event-controls {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
    }

    .event-controls .left-buttons,
    .event-controls .right-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    @media (max-width: 768px) {
        .event-controls {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }

        .table th,
        .table td {
            font-size: 0.85rem;
            white-space: nowrap;
        }

        .action-buttons {
            flex-direction: column;
        }
    }
</style>
{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

<div class="container py-5">
    <h1 class="mb-4">Manage Events</h1>

    <div class="event-controls">
        <div class="left-buttons">
            <a href="{{ path('app_event_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Create New Event
            </a>
        </div>
        <div class="right-buttons">
            <a href="{{ path('app_participation_index') }}" class="btn btn-primary">
                <i class="fas fa-users"></i> Show Participations
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Price (TND)</th>
                    <th>Organizer</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                        <td>{{ event.name }}</td>
                        <td>
                            {{ event.description|length > 50
                                ? event.description|slice(0, 50) ~ '...'
                                : event.description }}
                        </td>
                        <td>{{ event.location }}</td>
                        <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
                        <td>{{ event.time }}</td>
                        <td>{{ event.price }}</td>
                        <td>{{ event.user ? event.user.email : 'Unknown' }}</td>
                        <td>
                            <div class="action-buttons">
                                <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i> Show
                                </a>
                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form method="post" action="{{ path('app_event_delete', {'id': event.id}) }}"
                                      onsubmit="return confirm('Are you sure you want to delete this event?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-muted text-center py-4">
                            No events found.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
