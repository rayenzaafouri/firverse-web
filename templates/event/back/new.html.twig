{% extends 'base.html.twig' %}

{% block title %}New Event{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
<div class="container event-container" style="text-align: center; background-color: #1e1e1e; color: #e0e0e0;">
    <h2 style="color: #92ff44;">Create New Event</h2>
  

    <div class="event-form-container" style="max-width: 800px; margin: 0 auto;">
    {{ form_start(form, {'attr': {'class': 'event-form', 'enctype': 'multipart/form-data'}}) }}
    
      {% for error in form.vars.errors %}
    <div class="alert alert-danger">
        {{ error.message }}
    </div>
    {% endfor %}
    <!-- Name Field -->
    <div class="row mb-3">
        <div class="col-md-12">
            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {
                'attr': {
                    'class': 'form-control dark-input' ~ (form.name.vars.errors ? ' is-invalid' : '')
                }
            }) }}
            {% if form.name.vars.errors %}
                <div class="invalid-feedback">
                    {{ form_errors(form.name) }}
                </div>
            {% endif %}
           
        </div>
    </div>

    <!-- Location Field -->
    <div class="row mb-3">
        <div class="col-md-6">
            {{ form_label(form.location, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.location, {'attr': {'class': 'form-control dark-input' ~ (form.location.vars.errors ? ' is-invalid' : '')}}) }}
            {% if form.location.vars.errors %}
                <div class="invalid-feedback">
                    {{ form_errors(form.location) }}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Date, Time, and Price Fields -->
    <div class="row mb-3">
        <div class="col-md-4">
            {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control dark-input' ~ (form.date.vars.errors ? ' is-invalid' : '')}}) }}
            {% if form.date.vars.errors %}
                <div class="invalid-feedback">
                    {{ form_errors(form.date) }}
                </div>
            {% endif %}
        </div>
        <div class="col-md-4">
            {{ form_label(form.time, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.time, {'attr': {'class': 'form-control dark-input' ~ (form.time.vars.errors ? ' is-invalid' : '')}}) }}
            {% if form.time.vars.errors %}
                <div class="invalid-feedback">
                    {{ form_errors(form.time) }}
                </div>
            {% endif %}
        </div>
        <div class="col-md-4">
            {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control dark-input' ~ (form.price.vars.errors ? ' is-invalid' : '')}}) }}
            {% if form.price.vars.errors %}
                <div class="invalid-feedback">
                    {{ form_errors(form.price) }}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Description Field -->
    <div class="mb-3">
        {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control dark-input' ~ (form.description.vars.errors ? ' is-invalid' : ''), 'rows': 5}}) }}
        {% if form.description.vars.errors %}
            <div class="invalid-feedback">
                {{ form_errors(form.description) }}
            </div>
        {% endif %}
    </div>

    <!-- Photo Field -->
    <div class="mb-3">
        {{ form_label(form.photo, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.photo, {'attr': {'class': 'form-control dark-input' ~ (form.photo.vars.errors ? ' is-invalid' : '')}}) }}
        {% if form.photo.vars.errors %}
            <div class="invalid-feedback">
                {{ form_errors(form.photo) }}
            </div>
        {% endif %}
    </div>

    <!-- Submit Buttons -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
        <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary me-md-2" style="border-color: #92ff44; color: #92ff44;">
            Back to list
        </a>
        <button type="submit" class="btn" style="background-color: #92ff44; color: #1a1a1a;">
            <i class="fas fa-save"></i> Save
        </button>
    </div>

    {{ form_end(form) }}
</div>


</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<style>
    .event-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
    }

    .dark-input {
        background-color: #2d2d2d;
        border-color: #444;
        color: #e0e0e0;
    }

    .dark-input:focus {
        background-color: #2d2d2d;
        border-color: #92ff44;
        color: #e0e0e0;
        box-shadow: 0 0 0 0.25rem rgba(146, 255, 68, 0.25);
    }

    .form-label {
        color: #92ff44;
        margin-bottom: 0.5rem;
    }

    .btn {
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 768px) {
        .event-container {
            padding: 20px;
        }
    }
    .form-error-message {
        color: #ff6b6b;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    /* Make sure form controls with errors are highlighted */
    .is-invalid {
        border-color: #ff6b6b !important;
    }
    .invalid-feedback {
    color: red;
    font-size: 0.875em;
}
</style>
{% endblock %}