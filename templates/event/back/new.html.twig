<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Event</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
    body {
    background-color: #1e1e1e;
    color: #e0e0e0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 900px;
    margin: 50px auto;
    padding: 40px;
    border-radius: 12px;
    background: linear-gradient(145deg, #2a2a2a, #1e1e1e);
    box-shadow: 20px 20px 60px #1c1c1c, -20px -20px 60px #262626;
    text-align: center;
}

h2 {
    color: #92ff44;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 30px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.event-form-container {
    max-width: 100%;
    margin: 0 auto;
}

.form-group {
    margin-bottom: 20px;
    text-align: left;
}

.form-label {
    color:rgb(101, 192, 36);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 8px;
    display: block;
}

.form-control {
    width: 100%;
    padding: 12px 15px;
    background-color:rgb(255, 255, 255);
    border: 1px solid #444;
    border-radius: 6px;
    color:rgb(150, 149, 149);
    transition: all 0.3s ease;
}

.form-control:focus {
    border-color: #92ff44;
    box-shadow: 0 0 8px rgba(146, 255, 68, 0.5);
    outline: none;
}


.btn {
    padding: 12px 25px;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-outline-secondary {
    background-color: transparent;
    border: 2px solid #92ff44;
    color: #92ff44;
}

.btn-outline-secondary:hover {
    background-color: #92ff44;
    color: #1a1a1a;
}

.btn-primary {
    background-color: #92ff44;
    color: #1a1a1a;
}

.btn-primary:hover {
    background-color: #78e633;
}

.form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 15px;
    margin-top: 30px;
}

@media (max-width: 768px) {
    .container {
        padding: 30px;
    }

    h2 {
        font-size: 1.75rem;
    }

    .form-actions {
        flex-direction: column;
        align-items: stretch;
        gap: 10px;
    }
}
    </style>
</head>
<body>
    <div class="container event-container">
        <h2>Create New Event</h2>

        <div class="event-form-container">
            {{ form_start(form, {'attr': {'class': 'event-form', 'enctype': 'multipart/form-data'}}) }}

            {% for error in form.vars.errors %}
                <div class="alert alert-danger" style="text-align: center; margin-bottom: 20px;">
                    {{ error.message }}
                </div>
            {% endfor %}

            <!-- Name Field -->
            <div class="form-group">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {
                    'attr': {
                        'class': 'form-control' ~ (form.name.vars.errors ? ' is-invalid' : '')
                    }
                }) }}
                {% if form.name.vars.errors %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.name) }}
                    </div>
                {% endif %}
            </div>

            <!-- Location Field -->
            <div class="form-group">
                {{ form_label(form.location, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.location, {'attr': {'class': 'form-control' ~ (form.location.vars.errors ? ' is-invalid' : '')}}) }}
                {% if form.location.vars.errors %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.location) }}
                    </div>
                {% endif %}
            </div>

            <!-- Date, Time, and Price Fields -->
            <div class="row">
                <div class="col-md-4 form-group">
                    {{ form_label(form.date, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control' ~ (form.date.vars.errors ? ' is-invalid' : '')}}) }}
                    {% if form.date.vars.errors %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.date) }}
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-4 form-group">
                    {{ form_label(form.time, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.time, {'attr': {'class': 'form-control' ~ (form.time.vars.errors ? ' is-invalid' : '')}}) }}
                    {% if form.time.vars.errors %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.time) }}
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-4 form-group">
                    {{ form_label(form.price, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control' ~ (form.price.vars.errors ? ' is-invalid' : '')}}) }}
                    {% if form.price.vars.errors %}
                        <div class="invalid-feedback">
                            {{ form_errors(form.price) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Description Field -->
            <div class="form-group">
                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors ? ' is-invalid' : ''), 'rows': 5}}) }}
                {% if form.description.vars.errors %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.description) }}
                    </div>
                {% endif %}
            </div>

            <!-- Photo Field -->
            <div class="form-group">
                {{ form_label(form.photo, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.photo, {'attr': {'class': 'form-control' ~ (form.photo.vars.errors ? ' is-invalid' : '')}}) }}
                {% if form.photo.vars.errors %}
                    <div class="invalid-feedback">
                        {{ form_errors(form.photo) }}
                    </div>
                {% endif %}
            </div>

            <!-- Submit Buttons -->
            <div class="form-actions">
                <a href="{{ path('app_event_index') }}" class="btn btn-outline-secondary">Back to list</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</body>
</html>