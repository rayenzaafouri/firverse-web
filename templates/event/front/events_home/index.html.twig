{% extends 'base.html.twig' %}

{% block title %}Events Home{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("searchEvent");
        const monthFilter = document.getElementById("monthFilter");
        const yearFilter = document.getElementById("yearFilter");
        const minPriceFilter = document.getElementById("minPrice");
        const maxPriceFilter = document.getElementById("maxPrice");
        const filterBtn = document.getElementById("filterBtn");
        const eventCards = document.querySelectorAll(".event-card");
        const noResult = document.getElementById("noResult");

        function filterEvents() {
            const searchTerm = searchInput.value.toLowerCase();
            const selectedMonth = parseInt(monthFilter.value);
            const selectedYear = parseInt(yearFilter.value);
            const minPrice = parseFloat(minPriceFilter.value) || 0;
            const maxPrice = parseFloat(maxPriceFilter.value) || Infinity;

            let found = false;

            eventCards.forEach(function (card) {
                const eventName = card.querySelector(".event-title").textContent.toLowerCase();
                const eventLocation = card.querySelector(".event-location").textContent.toLowerCase();
                const eventDate = new Date(card.dataset.date);
                const eventMonth = eventDate.getMonth() + 1;
                const eventYear = eventDate.getFullYear();
                const eventPrice = parseFloat(card.dataset.price) || 0;

                const matchesSearch = eventName.includes(searchTerm) || eventLocation.includes(searchTerm);
                const matchesMonth = !selectedMonth || eventMonth === selectedMonth;
                const matchesYear = !selectedYear || eventYear === selectedYear;
                const matchesPrice = eventPrice >= minPrice && eventPrice <= maxPrice;

                if (matchesSearch && matchesMonth && matchesYear && matchesPrice) {
                    card.style.display = "block";
                    found = true;
                } else {
                    card.style.display = "none";
                }
            });

            noResult.style.display = found ? "none" : "block";
        }
       // 🔁 Rechercher dynamiquement à la frappe
        searchInput.addEventListener("input", filterEvents);
        // 📅 Filtrer 
        filterBtn.addEventListener("click", filterEvents);
    });

</script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    /* Styles for the event page */
    .events-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        justify-content: center;
        padding: 20px;
    }

    .event-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        text-align: center;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
    }

    .event-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        background-color: #f9f9f9; /* Light background on hover */
    }

    .event-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        object-position: center;
        transition: opacity 0.3s ease;
    }

    .event-image:hover {
        opacity: 0.8;
    }

    .event-details {
        padding: 15px;
        text-align: left;
    }

    .event-title {
        font-size: 1.8em;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
        text-align: center;
    }

    .event-date {
        color: #777;
        margin-bottom: 15px;
        font-size: 1.1em;
        text-align: center;
    }

    .event-description {
        color: #555;
        margin-bottom: 15px;
        font-size: 1.1em;
        line-height: 1.5;
        word-wrap: break-word;
    }

    .event-location {
        color: #007bff;
        margin-bottom: 10px;
        font-size: 1.1em;
    }

    .event-price {
        font-size: 1.3em;
        color: #28a745;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .event-btn {
        background-color: #007bff;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 1.1em;
        transition: background-color 0.3s ease;
    }

    .event-btn:hover {
        background-color: #0056b3;
    }

    /* Search bar styles */
    .search-bar {
        margin: 20px auto;
        max-width: 400px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 1.1em;
        width: 100%;
        box-sizing: border-box;
        outline: none;
    }

    .search-bar:focus {
        border-color: #007bff;
    }

    /* Emoji Styles for search filters */
    .search-icon {
        margin-right: 8px;
        font-size: 1.3em;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .events-container {
            grid-template-columns: 1fr;
        }

        .event-title {
            font-size: 1.6em;
        }

        .event-date {
            font-size: 1em;
        }

        .event-description {
            font-size: 1em;
        }

        .event-price {
            font-size: 1.1em;
        }
    }
    /* Filters */
        .filters-container {
        margin: 20px auto;
        max-width: 900px;
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

    .filter-input {
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 1em;
        min-width: 150px;
    }

    .filter-button {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-weight: bold;
    }

    .filter-button:hover {
