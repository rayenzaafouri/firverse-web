{% block body %}
{% include 'navbar.html.twig' %}

<div class="container" data-context="events" style="text-align: center;">
<div class="sidebar">
    <a href="#" class="sidebar-icon" id="passedEvents">
        <i class="fas fa-check-circle"></i> Déjà Passé
    </a>
    <a href="#" class="sidebar-icon" id="favorites">
        <i class="fas fa-star"></i> Favoris
    </a>
    <a href="#" class="sidebar-icon" id="participated">
        <i class="fas fa-user-check"></i> Participé
    </a>
</div>
    <h1>Upcoming Events</h1>

    <!-- Search Bar with Emojis -->
    <input type="text" id="searchEvent" class="search-bar" placeholder="🔍 Search by name, 📍 location ...">

    <!-- Filters -->
    <div class="filters-container">
        <select id="monthFilter" class="filter-input">
            <option value="">📅 Filter by Month</option>
            {% for i in 1..12 %}
                <option value="{{ i }}">{{ date('2000-' ~ i ~ '-01')|date('F') }}</option>
            {% endfor %}
        </select>

        <select id="yearFilter" class="filter-input">
            <option value="">📆 Filter by Year</option>
            {% for i in 2024..2030 %}
                <option value="{{ i }}">{{ i }}</option>
            {% endfor %}
        </select>

        <input type="number" id="minPrice" class="filter-input" placeholder="💰 Min Price (TND)">
        <input type="number" id="maxPrice" class="filter-input" placeholder="💰 Max Price (TND)">
    <button id="filterBtn" class="filter-button">Filtrer</button>
    </div>

    {% if eventsdata is not empty %}
    <div class="events-container">
        {% for event in eventsdata %}
        
        <div class="event-card"
             data-date="{{ event.date|date('Y-m-d') }}"
             data-price="{{ event.price }}">
{% if event.photo %}
    <a href="{{ path('event_detail', {'id': event.id}) }}" class="event-link">
        <img src="{{ asset('uploads/events/' ~ event.photo) }}" 
             alt="{{ event.name }}" 
             class="event-image"
             onerror="this.onerror=null;this.src='{{ asset('images/default-event.jpg') }}'">
    </a>
{% else %}
    <a href="{{ path('event_detail', {'id': event.id}) }}" class="event-link">
        <img src="{{ asset('images/default-event.jpg') }}" 
             alt="Default event image" 
             class="event-image">
    </a>
{% endif %}

<div class="event-title">{{ event.name }}</div>

<button class="fav-btn" data-event-id="{{ event.id }}">
    <i class="fas fa-star"></i>
</button>

<div class="event-details">
    <div class="event-date">📅 {{ event.date|date('F j, Y') }} ⏰ {{ event.time|date('H:i') }}</div>
    <div class="event-location">📍 {{ event.location }}</div>
    <div class="event-price">💸 {{ event.price }} TND</div>
</div>

        </div>
        {% endfor %}
    </div>
    
    <div id="noResult" class="no-result" style="display: none;">❌ Aucun événement trouvé avec ces critères !</div>
    {% else %}
    <p>No upcoming events at the moment.</p>
    {% endif %}
</div>


{% endblock %}