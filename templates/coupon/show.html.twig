<h1>Coupon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ coupon.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ coupon.code }}</td>
            </tr>
            <tr>
                <th>Discount_percentage</th>
                <td>{{ coupon.discountPercentage }}</td>
            </tr>
            <tr>
                <th>Min_order_amount</th>
                <td>{{ coupon.minOrderAmount }}</td>
            </tr>
            <tr>
                <th>Valid_from</th>
                <td>{{ coupon.validFrom ? coupon.validFrom|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Valid_until</th>
                <td>{{ coupon.validUntil ? coupon.validUntil|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ coupon.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_coupon_index') }}">back to list</a>

