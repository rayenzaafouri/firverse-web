        <div class="equipment-icons">
            
        </div>



        <div class="header">
            <h1>{{ exercice.title }}</h1>



            <div class="badge text-bg-secondary">
                <span>{{ exercice.difficulty }}</span>

            {% if exercice.difficulty == 'novice' %}
