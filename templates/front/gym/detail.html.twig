{% extends 'base.html.twig' %}

{% block title %}{{ gym.name }} | FitVerse{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-section {
            background-color: #f9f9f9;
            padding: 30px;
            border-radius: 15px;
            color: #343a40;
            border: 2px solid #28a745;
        }

        .form-section h2 {
            color: #28a745;
            text-align: center;
            margin-bottom: 30px;
        }

        .list-group-item strong {
            color: #155724;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .gym-image {
            display: block;
            margin: 0 auto 20px auto;
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            border: 1px solid #ccc;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <h1 class="mb-3">{{ gym.name }}</h1>
                
                <div class="d-flex align-items-center mb-3">
                    <span class="text-warning">
                        {% for i in 1..5 %}
                            {% if i <= gym.rating %}
                                ★
                            {% else %}
                                ☆
                            {% endif %}
                        {% endfor %}
                    </span>
                    <span class="ms-2">(Rating: {{ gym.rating }}/5)</span>
                </div>
                
                <hr>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">About this gym</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">• <strong>Address:</strong> {{ gym.adresse }}</li>
                            <li class="mb-2">• <strong>Phone:</strong> {{ gym.phone }}</li>
                            <li class="mb-2">• <strong>Email:</strong> {{ gym.email }}</li>
                            <li class="mb-2">• <strong>Capacity:</strong> {{ gym.capacity }} members</li>
                            <li class="mb-2">• <strong>Created:</strong> {{ gym.createdAt ? gym.createdAt|date('Y-m-d') : 'N/A' }}</li>
                        </ul>
                    </div>
                </div>
                
                <div class="mb-4">
                    <form action="{{ path('gym_demande_rejoindre', {'id': gym.id}) }}" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-success">Demander à rejoindre</button>
                    </form>
                    <a href="{{ path('gym_front_list') }}" class="btn btn-secondary ms-2">← Retour à la liste</a>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card shadow-sm sticky-top" style="top: 20px;">
                    <div class="position-relative">
                        <img src="{{ gym.image }}" class="card-img-top p-4" style="height: 300px; object-fit: contain;" alt="{{ gym.name }}">
                    </div>
                    
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Name</span>
                            <span class="fw-bold">{{ gym.name }}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Rating</span>
                            <span class="fw-bold">{{ gym.rating }}/5</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
