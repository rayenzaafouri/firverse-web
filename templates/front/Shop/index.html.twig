{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block stylesheets %}
<style>
    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
    }

    .pagination li {
        margin: 0 4px;
    }

    .pagination a,
    .pagination span {
        display: block;
        padding: 6px 12px;
        border: 1px solid #dee2e6;
        color: #000;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500;
    }

    .pagination .active span {
        background-color: #fff;
        border: 2px solid #000;
        font-weight: bold;
    }

    .pagination .disabled span {
        color: #ccc;
        pointer-events: none;
    }
</style>
{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

<div class="container py-5">
    <h2 class="text-center mb-4">Nos Produits</h2>

    <div class="row g-4">
        {% for product in products %}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <img src="{{ product.imageUrl }}" class="card-img-top" style="object-fit: contain; height: 150px;" alt="{{ product.name }}">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text text-muted small">
                            {{ product.description|length > 40 ? product.description|slice(0, 150) ~ '...' : product.description }}
                        </p>
                        <div class="mt-auto">
                            <p class="text-dark fw-bold">{{ product.price|number_format(2) }} TND</p>
                            <a href="{{ path('productdetail', {'id': product.id}) }}" class="btn btn-primary btn-sm w-100">Voir Détails</a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center text-muted">Aucun produit trouvé.</p>
            </div>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-center mt-4">
        {{ knp_pagination_render(products) }}
    </div>
</div>
{% endblock %}
