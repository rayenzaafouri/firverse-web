{% extends 'back/admin/dashboard-skeleton.html.twig' %}

{% block title %}Admin Dashboard - Fitverse{% endblock %}




{% block info %}
This section allows you to manage all aspects of the workouts included in the platform.
{% endblock %}



{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('/styles/admin.css') }}">
<style>

	.table{
		text-align: center;
        vertical-align: middle;
	}


</style>
{% endblock %}


{% block header %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('app_workout_index_admin') }}">Admin</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
    </ol>
</nav>
{% endblock %}


{% block javascripts %}
{{ parent() }}


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Simple toggle for dropdowns
    const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
    dropdownToggles.forEach(toggle => {
        toggle.addEventListener('click', function(e) {
            e.preventDefault();
            const targetId = this.dataset.target;
            const target = document.querySelector(targetId);
            
            // Toggle current dropdown
            this.classList.toggle('active');
            target.classList.toggle('show');
            
            // Update aria-expanded
            const isExpanded = target.classList.contains('show');
            this.setAttribute('aria-expanded', isExpanded);
        });
    });

    // Charts
    const dailySalesData = {{ dailySales|json_encode|raw }};
    const dates = Object.keys(dailySalesData);
    const revenues = Object.values(dailySalesData);

    const topProductsData = {{ topProducts|json_encode|raw }};
    const topProductNames = topProductsData.map(item => item.product);
    const topProductQuantities = topProductsData.map(item => item.quantity);

    // Sales Chart
    const salesCtx = document.getElementById('salesChart').getContext('2d');
    new Chart(salesCtx, {
        type: 'line',
        data: {
            labels: dates,
            datasets: [{
                label: 'Sales ($)',
                data: revenues,
                borderColor: 'rgba(75, 192, 192, 1)',
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                tension: 0.4,
                fill: true
            }]
        },
        options: {
            scales: {
                x: { ticks: { autoSkip: true, maxTicksLimit: 10 } },
                y: { beginAtZero: true }
            }
        }
    });

    // Top Products Chart
    const topProductsCtx = document.getElementById('topProductsChart').getContext('2d');
    new Chart(topProductsCtx, {
        type: 'bar',
        data: {
            labels: topProductNames,
            datasets: [{
                label: 'Units Sold',
                data: topProductQuantities,
                backgroundColor: 'rgba(153, 102, 255, 0.5)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        },
        options: {
            indexAxis: 'y',
            scales: {
                x: {
                    beginAtZero: true
                }
            }
        }
    });
});
</script>
{% endblock %}


{% block content %}
    <div class="container">

        {% block info %}
            Manage and oversee all aspects of the platform
        {% endblock %}

        <figcaption class="blockquote-footer">
            Statistics
        </figcaption>

        <div class="overview-stats">
            <div class="card">
                <div class="card-body">
                    <h3>{{ totalProducts }}</h3>
                    <h2>Products</h2>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h3>{{ totalOrders }}</h3>
                    <h2>Orders</h2>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h3>${{ totalRevenue|number_format(2, '.', ',') }}</h3>
                    <h2>Total Revenue</h2>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h3>{{ totalProductsSold }}</h3>
                    <h2>Products Sold</h2>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Sales Last 30 Days
                    </div>
                    <div class="card-body">
                        <canvas id="salesChart" height="200"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Top 5 Best-Selling Products
                    </div>
                    <div class="card-body">
                        <canvas id="topProductsChart" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}