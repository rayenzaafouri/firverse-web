			display: flex;
			flex-direction: row;
			align-items: center;
		}

		.details {
			width: 40 lvw;
			display: flex;
			flex-direction: column;
			gap: 0.5rem;


			img {
				object-fit: cover;
			}
		}

		.json-assist {
			display: none !important;
		}

		.exercise-view {

