


{% if exercice.id is defined and exercice.id is not empty %}

<form id="delete-form" method="post" action="{{ path('app_exercice_delete', {'id': exercice.id}) }}" novalidate>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exercice.id) }}">
    <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</button>
</form>

{% endif %}


<script>
document.addEventListener('DOMContentLoaded', function () {
    const deleteForm = document.getElementById('delete-form');

    deleteForm.addEventListener('submit', function (e) {
        e.preventDefault(); // Prevent normal form behavior
        if (confirm('Are you sure you want to delete this item?')) {
            deleteForm.submit(); // Force submit without triggering validation of any other form
        }
    });
});
</script>
