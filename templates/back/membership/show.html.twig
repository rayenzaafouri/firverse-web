{% extends 'back/admin/dashboard-skeleton.html.twig' %}

{% block title %}Membership Details{% endblock %}

{% block header %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('app_membership_index') }}">Memberships</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .form-section {
        background-color: #f1f8f2;
        padding: 30px;
        border-radius: 15px;
        color: #343a40;
        border: 2px solid #28a745;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        background-color: #ffffff;
        color: #495057;
        border: 1px solid #28a745;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
    }

    .form-buttons {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .modal-header.bg-danger {
        background-color: #dc3545;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // Optional JS if needed for modal behavior
</script>
{% endblock %}

{% block content %}
<div class="form-container py-4">
    <div class="form-section">
        <h1 class="text-center mb-4">Membership Details</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

        <div class="mb-3 row">
            <label class="col-sm-4 form-label">{{ form_label(form.start_date, 'Date de dÃ©but') }}</label>
            <div class="col-sm-8">{{ form_widget(form.start_date, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 form-label">{{ form_label(form.end_date, 'Date de fin') }}</label>
            <div class="col-sm-8">{{ form_widget(form.end_date, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 form-label">{{ form_label(form.price, 'Prix') }}</label>
            <div class="col-sm-8">{{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 form-label">{{ form_label(form.coaching, 'Coaching') }}</label>
            <div class="col-sm-8">{{ form_widget(form.coaching, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 form-label">{{ form_label(form.status, 'Statut') }}</label>
            <div class="col-sm-8">{{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 form-label">{{ form_label(form.user, 'Utilisateur') }}</label>
            <div class="col-sm-8">{{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="mb-3 row">
            <label class="col-sm-4 form-label">{{ form_label(form.gym, 'Salle de sport') }}</label>
            <div class="col-sm-8">{{ form_widget(form.gym, {'attr': {'class': 'form-control'}}) }}</div>
        </div>

        <div class="form-buttons">
            <a href="{{ path('app_membership_export_pdf', { id: membership.id }) }}" class="btn btn-danger">
                ðŸ“„ Export to PDF
            </a>
            <a href="{{ path('app_membership_index') }}" class="btn btn-secondary">Back</a>
        </div>

        {{ form_end(form) }}

        <div class="text-end mt-3">
            <!-- Trigger for Delete Modal -->
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmModal">
                Delete
            </button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                        <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this membership?
                    </div>
                    <div class="modal-footer">
                        <form method="post" action="{{ path('app_membership_delete', {'id': membership.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membership.id) }}">
                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
