{% extends 'back/admin/dashboard-skeleton.html.twig' %}

{% block title %}Modifier l'abonnement{% endblock %}

{% block header %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('app_membership_index') }}">Abonnements</a>
        </li>

        <li class="breadcrumb-item">
            <a href="{{ path('app_membership_index') }}">Modifier</a>
        </li>
    </ol>
</nav>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script></script>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .form-section {
        background-color: #f1f8f2;
        padding: 30px;
        border-radius: 15px;
        color: #343a40;
        border: 2px solid #28a745;
    }

    .form-section h1 {
        color: #28a745;
        text-align: center;
        margin-bottom: 30px;
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        background-color: #ffffff;
        color: #495057;
        border: 1px solid #28a745;
        border-radius: 5px;
    }

    .form-control::placeholder {
        color: #6c757d;
    }

    .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .form-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .form-row {
        display: flex;
        justify-content: space-between;
    }

    .form-row .col {
        width: 48%;
    }

    .alert {
        border-radius: 5px;
    }

    .form-buttons {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-top: 30px;
    }

    .table th, .table td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #28a745;
        color: white;
    }

    .table td {
        background-color: #f8f9fa;
    }
</style>
{% endblock %}

{% block content %}
    <div class="container py-5" style="max-width: 800px;">
        <h1 class="text-center mb-4">Modifier l'abonnement</h1>

        <div class="form-section">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <table class="table">
                <thead>
                    <tr>
                        <th>Champ</th>
                        <th>Détail</th>
                    </tr>
                </thead>
                <tbody>
                    {% for field, label in {'start_date': 'Date de début', 'end_date': 'Date de fin', 'price': 'Prix', 'coaching': 'Coaching', 'status': 'Statut', 'user': 'Utilisateur', 'gym': 'Salle de sport'} %}
                        <tr>
                            <td>{{ label }}</td>
                            <td>
                                {{ form_widget(form[field], {'attr': {'class': 'form-control'}}) }}
                                {% if form[field].vars.errors|length > 0 %}
                                    <div class="alert alert-danger mt-2">
                                        {% for error in form[field].vars.errors %}
                                            <p>{{ error.message }}</p>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="form-buttons mt-4">
                <a href="{{ path('app_membership_index') }}" class="btn btn-secondary">Retour</a>
                <button type="submit" class="btn btn-primary">Modifier</button>
            </div>

            {{ form_end(form) }}

            <button type="button" class="btn btn-danger mt-3" data-toggle="modal" data-target="#deleteConfirmModal">
                Supprimer
            </button>

            <div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="deleteConfirmModalLabel">Confirmer la suppression</h5>
                            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Êtes-vous sûr de vouloir supprimer cet abonnement ?
                        </div>
                        <div class="modal-footer">
                            <form method="post" action="{{ path('app_membership_delete', {'id': membership.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membership.id) }}">
                                <button type="submit" class="btn btn-danger">Oui, supprimer</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
