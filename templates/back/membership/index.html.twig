{% extends 'back/admin/dashboard-skeleton.html.twig' %}

{% block title %}Memberships{% endblock %}

{% block header %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Memberships</li>
    </ol>
</nav>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .no-results {
        display: none;
        text-align: center;
        padding: 20px;
    }
</style>
{% endblock %}

{% block content %}

{# Flash Messages #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<div class="mb-3 d-flex justify-content-between flex-wrap gap-3">
    <div class="input-group w-50">
        <input type="text" class="form-control" id="searchById" placeholder="Search by Membership ID" oninput="filterMemberships()">
    </div>
    <div class="d-flex align-items-center">
        <label for="statusFilter" class="me-2 mb-0">Filter by Status:</label>
        <select class="form-select" id="statusFilter" onchange="filterMemberships()">
            <option value="">All</option>
            <option value="active">Active</option>
            <option value="expired">Expired</option>
            <option value="inactive">Inactive</option>
        </select>
    </div>
</div>

<div class="mb-3">
    <a href="{{ path('app_membership_new') }}" class="btn btn-success"><i class="fa-solid fa-plus"></i> Add New Membership</a>
    <a href="{{ path('app_gym_index') }}" class="btn btn-info">Go to Gyms</a>
    <a href="{{ path('app_membership_stats') }}" class="btn btn-outline-dark">ðŸ“Š Membership Stats</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center" id="membershipTable">
        <thead class="thead-dark">
            <tr>
                <th>Actions</th>
                <th>ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Price</th>
                <th>Coaching</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for membership in memberships %}
            <tr data-id="{{ membership.id }}" data-status="{{ membership.status|lower }}">
                <td>
                    <div class="d-flex flex-column align-items-center gap-2">
                        <a href="{{ path('app_membership_show', {'id': membership.id}) }}" class="btn btn-sm btn-primary w-75">View</a>
                        <a href="{{ path('app_membership_edit', {'id': membership.id}) }}" class="btn btn-sm btn-warning w-75">Edit</a>
                        <button class="btn btn-sm btn-danger w-75"
                                onclick="openDeleteModal('{{ path('app_membership_delete', {'id': membership.id}) }}', '{{ csrf_token('delete' ~ membership.id) }}')">
                            Delete
                        </button>
                    </div>
                </td>
                <td>{{ membership.id }}</td>
                <td>{{ membership.start_date ? membership.start_date|date('Y-m-d') : 'â€”' }}</td>
                <td>{{ membership.end_date ? membership.end_date|date('Y-m-d') : 'â€”' }}</td>
                <td>{{ membership.price }} â‚¬</td>
                <td>{{ membership.coaching ? 'Yes' : 'No' }}</td>
                <td class="text-capitalize">{{ membership.status }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-muted">No memberships found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="noResults" class="no-results">
        <i class="bi bi-exclamation-circle fs-1"></i>
        <h4 class="mt-3">No memberships found matching your criteria</h4>
    </div>
</div>

{# Delete Modal #}
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this membership?
            </div>
            <div class="modal-footer">
                <form id="deleteMembershipForm" method="post">
                    <input type="hidden" name="_token" id="deleteMembershipToken" value="">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    function filterMemberships() {
        const searchValue = document.getElementById('searchById').value.toLowerCase();
        const selectedStatus = document.getElementById('statusFilter').value.toLowerCase();
        const rows = document.querySelectorAll('#membershipTable tbody tr');
        let visibleCount = 0;

        rows.forEach(row => {
            const id = row.cells[1].textContent.toLowerCase();
            const status = row.getAttribute('data-status');

            const matchesId = id.includes(searchValue);
            const matchesStatus = selectedStatus === '' || status === selectedStatus;

            if (matchesId && matchesStatus) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });

        document.getElementById('noResults').style.display = visibleCount === 0 ? 'block' : 'none';
    }

    function openDeleteModal(actionUrl, csrfToken) {
        const form = document.getElementById('deleteMembershipForm');
        form.action = actionUrl;
        document.getElementById('deleteMembershipToken').value = csrfToken;
        const modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
        modal.show();
    }

    document.addEventListener('DOMContentLoaded', filterMemberships);
</script>
{% endblock %}
