{% extends 'base.html.twig' %}

{% block title %}Membership Status Stats{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">üìä Membership Status Statistics</h1>

    <!-- Graphique Google Chart -->
    <div id="membershipStatusChart" style="width: 100%; height: 500px;"></div>

    <a href="{{ path('app_membership_index') }}" class="btn btn-secondary mt-3">‚Üê Back to Membership Management</a>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        // Donn√©es pour le graphique (distribuer les donn√©es selon les statuts)
        const data = google.visualization.arrayToDataTable([
          ['Status', 'Count'],
          {% for status, count in statusStats %}
              ['{{ status | capitalize }}', {{ count }}],
          {% endfor %}
        ]);

        // Options du graphique (titre, couleurs, etc.)
        const options = {
          title: 'Membership Status Distribution',
          pieHole: 0.4,  // Pour faire un graphique en anneau (donut chart)
          colors: ['#ff6384', '#36a2eb', '#ffcd56'],
          legend: { position: 'labeled' },
          chartArea: { width: '100%', height: '80%' },
        };

        // Cr√©ation et affichage du graphique
        const chart = new google.visualization.PieChart(document.getElementById('membershipStatusChart'));
        chart.draw(data, options);
      }
  google.charts.setOnLoadCallback(drawChart);
  document.addEventListener('turbo:load', drawChart);     // pour Symfony UX Turbo
  document.addEventListener('DOMContentLoaded', drawChart);
    </script>
{% endblock %}
