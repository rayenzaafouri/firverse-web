{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }}{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

<div class="container py-5" style="max-width: 950px;">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="mb-1" style="font-weight: 700; color: #2d3436;">Order Details</h1>
            <p class="text-muted">Order #{{ order.id }} â€¢ {{ order.orderDate ? order.orderDate|date('M d, Y') : '' }}</p>
        </div>
        <a href="{{ path('app_order_index') }}" class="btn btn-sm btn-outline-dark rounded-pill px-3">
            <i class="fas fa-chevron-left mr-1"></i> Back to orders
        </a>
    </div>

    <!-- Order Status Card -->
    <div class="card mb-4 border-0 shadow-sm rounded-lg">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-6 mb-3 mb-md-0">
                    <div class="d-flex align-items-center">
                        <div class="mr-3" style="width: 48px; height: 48px; background-color: #f5f6fa; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-receipt" style="color: #6c5ce7; font-size: 1.2rem;"></i>
                        </div>
                        <div>
                            <h6 class="mb-0" style="font-weight: 600;">Order Status</h6>
                            <span class="badge 
                                {% if order.status == 'completed' %}bg-success
                                {% elseif order.status == 'processing' %}bg-primary
                                {% elseif order.status == 'cancelled' %}bg-danger
                                {% else %}bg-secondary{% endif %} px-3 py-1 rounded-pill">
                                {{ order.status|capitalize }}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center justify-content-md-end">
                        <div class="text-right">
                            <h6 class="mb-0" style="font-weight: 600;">Total Amount</h6>
                            <h3 class="mb-0" style="color: #6c5ce7; font-weight: 700;">{{ order.totalPrice|number_format(2) }} TND</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items Section -->
    <div class="card border-0 shadow-sm rounded-lg mb-4">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0" style="font-weight: 600;">Order Items</h5>
        </div>
        <div class="card-body p-0">
            {% if order.orderDetails is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead style="background-color: #f8f9fa;">
                            <tr>
                                <th class="border-0 py-3" style="font-weight: 600; width: 50%;">Product</th>
                                <th class="border-0 py-3 text-center" style="font-weight: 600;">Qty</th>
                                <th class="border-0 py-3 text-right" style="font-weight: 600;">Price</th>
                                <th class="border-0 py-3 text-right" style="font-weight: 600;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for detail in order.orderDetails %}
                                <tr style="border-bottom: 1px solid #f1f2f6;">
                                    <td class="py-3">
                                        <div class="d-flex align-items-center">
                                            <div style="width: 40px; height: 40px; background-color: #f5f6fa; border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                                                <i class="fas fa-box" style="color: #a29bfe;"></i>
                                            </div>
                                            <span>{{ detail.product.name }}</span>
                                        </div>
                                    </td>
                                    <td class="py-3 text-center">
                                        <span class="badge bg-light text-dark rounded-pill px-3">{{ detail.quantity }}</span>
                                    </td>
                                    <td class="py-3 text-right">{{ detail.priceAtPurchase|number_format(2) }} TND</td>
                                    <td class="py-3 text-right" style="font-weight: 600; color: #2d3436;">{{ (detail.quantity * detail.priceAtPurchase)|number_format(2) }} TND</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <div style="width: 80px; height: 80px; background-color: #f5f6fa; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 16px;">
                        <i class="fas fa-shopping-basket" style="color: #a29bfe; font-size: 1.5rem;"></i>
                    </div>
                    <h5 style="font-weight: 600; color: #2d3436;">No items in this order</h5>
                    <p class="text-muted">This order doesn't contain any products</p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Order Summary -->
    <div class="row">
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0" style="font-weight: 600;">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Order Date</small>
                        <p class="mb-0">{{ order.orderDate ? order.orderDate|date('F j, Y \a\t g:i A') : '-' }}</p>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Order Number</small>
                        <p class="mb-0">#{{ order.id }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-lg h-100">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0" style="font-weight: 600;">Payment Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal</span>
                        <span>{{ order.totalPrice|number_format(2) }} TND</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Shipping</span>
                        <span>0.00 TND</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Tax</span>
                        <span>0.00 TND</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span style="font-weight: 600;">Total</span>
                        <span style="font-weight: 600; color: #6c5ce7;">{{ order.totalPrice|number_format(2) }} TND</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(108, 92, 231, 0.1) !important;
    }
    .badge {
        font-weight: 500;
        letter-spacing: 0.3px;
    }
    .table tbody tr:last-child {
        border-bottom: none !important;
    }
    .rounded-lg {
        border-radius: 12px !important;
    }
</style>
{% endblock %}