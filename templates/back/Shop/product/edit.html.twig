{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('/styles/admin.css') }}">
{% endblock %}

{% block body %}
<div class="admin-dashboard-layout">
    <div id="sidenavAccordion">
        {% include 'back/admin/sidenav.html.twig' %}
    </div>

    <div class="container py-5">
        <h1 class="mb-4 text-center">Edit Product</h1>

        <div class="card shadow p-4">
            {{ form_start(form) }}

            {% for field in [form.name, form.brand, form.description, form.price, form.stock, form.imageUrl, form.category] %}
                <div class="form-group">
                    {{ form_label(field) }}
                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(field) }}</div>
                </div>
            {% endfor %}

            <div class="text-center">
                <button class="btn btn-warning mt-3">Update</button>
                <a href="{{ path('app_product_index') }}" class="btn btn-secondary mt-3 ml-2">Cancel</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
