{% extends 'base.html.twig' %}

{% block title %}View Category{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('/styles/admin.css') }}">
{% endblock %}

{% block body %}
<div class="admin-dashboard-layout">
    <div id="sidenavAccordion">
        {% include 'back/admin/sidenav.html.twig' %}
    </div>

    <div class="container">
        <h1 class="mb-4">Category Details</h1>

        <div class="card">
            <div class="card-body">
                <h3>{{ category.name }}</h3>
                <p class="text-muted">{{ category.description }}</p>

                <div class="mt-3">
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Edit</a>
                    <a href="{{ path('app_category_index') }}" class="btn btn-secondary ms-2">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
