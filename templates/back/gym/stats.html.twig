{% extends 'back/admin/dashboard-skeleton.html.twig' %}

{% block title %}Gym Rating Stats{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .breadcrumb {
            margin-bottom: 20px;
        }

        .chart-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px 0;
        }

        #chart_div {
            width: 100%;
            max-width: 700px;
            height: 500px;
        }

        .back-button {
            text-align: center;
            margin-top: 30px;
        }
    </style>
{% endblock %}

{% block header %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin_dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('app_gym_index') }}">Gyms</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Gym Rating Stats</li>
    </ol>
</nav>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', { packages: ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            const data = google.visualization.arrayToDataTable([
                ['Rating', 'Number of Gyms'],
                {% for rating, count in ratingStats %}
                    ['{{ rating }} Stars', {{ count }}],
                {% endfor %}
            ]);

            const options = {
                title: 'Distribution of Gyms by Rating',
                pieHole: 0.4,
                colors: ['#ff6384', '#36a2eb', '#ffcd56', '#4bc0c0', '#9966ff'],
                legend: { position: 'labeled' },
                chartArea: { width: '100%', height: '80%' }
            };

            const chart = new google.visualization.PieChart(document.getElementById('chart_div'));
            chart.draw(data, options);
        }

        document.addEventListener('DOMContentLoaded', drawChart);
        document.addEventListener('turbo:load', drawChart);
    </script>
{% endblock %}

{% block content %}
<div class="container-fluid py-5">
    <h1 class="text-center mb-4">ðŸ“Š Gym Statistics by Rating</h1>

    <div class="chart-wrapper">
        <div id="chart_div"></div>
    </div>

    <div class="back-button">
        <a href="{{ path('app_gym_index') }}" class="btn btn-secondary">Back to Gym Management</a>
    </div>
</div>
{% endblock %}
