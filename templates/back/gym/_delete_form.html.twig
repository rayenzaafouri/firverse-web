
<form method="post" action="{{ path('app_gym_delete', {'id': gym.id}) }}" onsubmit="return confirm('Are you sure you want to delete this gym?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gym.id) }}">
    <button class="{{ btn_class|default('btn btn-danger') }}">Delete</button>
</form>

