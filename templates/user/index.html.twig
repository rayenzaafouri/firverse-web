{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">User index</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Role</th>
                    <th>Birth Date</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.address }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.gender }}</td>
                        <td>{{ user.role }}</td>
                        <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                        <td>
                            {% if user.image %}
                                <img src="{{ asset('profile_images/' ~ user.image) }}" alt="User image" class="img-thumbnail" style="max-width: 100px;">
                            {% else %}
                                N/A
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary mb-1">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary mb-1">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-end">
        <a href="{{ path('app_user_new') }}" class="btn btn-primary">Create New</a>
    </div>
</div>
{% endblock %}
