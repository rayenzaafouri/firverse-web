{# templates/user/form.html.twig #}

{{ form_start(form, {'attr': {'class': 'container mt-4', 'novalidate': 'novalidate'}}) }}

<div class="row">
    <div class="col-md-6">
        <!-- First Name -->
        <div class="mb-3">
            {{ form_label(form.first_name, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.first_name) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.last_name, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.last_name) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.address, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.address) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.phone) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.password, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.password) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.gender, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.gender) }}
            <div class="text-danger">
                {{ form_errors(form.gender) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.role, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
            <div class="text-danger">
                {{ form_errors(form.role) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.birth_date, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.birth_date, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.birth_date) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.image, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.image) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            {{ button_label|default('Save') }}
        </button>
    </div>
</div>

{{ form_end(form) }}
