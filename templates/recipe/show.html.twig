{% extends 'base.html.twig' %}

{% block title %}{{ recipe.name }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-gray-800">{{ recipe.name }}</h1>
            <div>
                <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-primary">Edit</a>
                <a href="{{ path('app_recipe_index') }}" class="btn btn-secondary">Back to list</a>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Recipe Details</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Times Used</h5>
                        <p>{{ recipe.timesUsed }}</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Favorite Status</h5>
                        <p>
                            {% if recipe.isFavoris %}
                                <span class="badge badge-success">Favorite</span>
                            {% else %}
                                <span class="badge badge-secondary">Not a favorite</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-md-12">
                        <h5>Ingredients</h5>
                        <div class="d-flex flex-wrap">
                            {% for food in recipe.foods %}
                                <span class="badge badge-info p-2 m-1">{{ food.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 