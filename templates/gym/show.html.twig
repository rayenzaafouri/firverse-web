{% extends 'base.html.twig' %}

{% block title %}Gym Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-section {
            background-color: #f9f9f9;
            padding: 30px;
            border-radius: 15px;
            color: #343a40;
            border: 2px solid #28a745;
        }

        .form-section h1 {
            color: #28a745;
            text-align: center;
            margin-bottom: 30px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .table th {
            background-color: #d4edda;
            color: #155724;
        }

        .table td {
            background-color: #ffffff;
        }

        .form-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .form-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="form-container py-5">
        <div class="form-section">
            <h1>Gym Details</h1>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ gym.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ gym.name }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ gym.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Longitude</th>
                        <td>{{ gym.longitude }}</td>
                    </tr>
                    <tr>
                        <th>Latitude</th>
                        <td>{{ gym.latitude }}</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>{{ gym.phone }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ gym.email }}</td>
                    </tr>
                    <tr>
                        <th>Capacity</th>
                        <td>{{ gym.capacity }}</td>
                    </tr>
                    <tr>
                        <th>Opening Hours</th>
                        <td>{{ gym.openingHours }}</td>
                    </tr>
                    <tr>
                        <th>Rating</th>
                        <td>{{ gym.rating }}</td>
                    </tr>
                    <tr>
                        <th>Created At</th>
                        <td>{{ gym.createdAt ? gym.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            {% if gym.image %}
                                <img src="{{ gym.image }}" alt="{{ gym.name }}" style="width: 150px; height: auto;">
                            {% else %}
                                <span class="text-muted">No image</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="form-buttons">
                <a href="{{ path('app_gym_index') }}" class="btn btn-secondary">Back to list</a>
                <a href="{{ path('app_gym_edit', {'id': gym.id}) }}" class="btn btn-primary">Edit</a>
            </div>

            <div class="mt-3">
                {{ include('gym/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
