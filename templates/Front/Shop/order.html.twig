{% extends 'base.html.twig' %}

{% block title %}My Orders{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

<div class="container py-5">
    <h1 class="mb-4 text-center">My Orders</h1>

    {% if orders is not empty %}
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Total (TND)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i') : '-' }}</td>
                        <td>{{ order.status|capitalize }}</td>
                        <td>{{ order.totalPrice|number_format(2) }}</td>
                        <td>
                            <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-sm btn-primary">View</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="text-muted text-center">You haven't placed any orders yet.</p>
    {% endif %}
</div>
{% endblock %}
