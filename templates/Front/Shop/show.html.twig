{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }}{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}

<div class="container py-5">
    <h1 class="text-center mb-4">Order Summary</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <h5>Order ID: <span class="text-muted">#{{ order.id }}</span></h5>
            <p><strong>Date:</strong> {{ order.orderDate ? order.orderDate|date('Y-m-d H:i') : '-' }}</p>
            <p><strong>Status:</strong> {{ order.status|capitalize }}</p>
            <p><strong>Total Price:</strong> {{ order.totalPrice|number_format(2) }} TND</p>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Items in this order</h5>
        </div>
        <div class="card-body">
            {% if order.orderDetails is not empty %}
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Price (TND)</th>
                            <th>Total (TND)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for detail in order.orderDetails %}
                            <tr>
                                <td>{{ detail.product.name }}</td>
                                <td>{{ detail.quantity }}</td>
                                <td>{{ detail.priceAtPurchase|number_format(2) }}</td>
                                <td>{{ (detail.quantity * detail.priceAtPurchase)|number_format(2) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="text-muted">No products found for this order.</p>
            {% endif %}
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">Back to Orders</a>
    </div>
</div>
{% endblock %}
