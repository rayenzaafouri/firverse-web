{% extends 'base.html.twig' %}

{% block title %}Your Fitness Goals{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .progress-container {
            padding: 32px 0;
            max-width: 900px;
            margin: 0 auto;
        }
        .progress-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .progress-subtitle {
            color: #444;
            margin-bottom: 1.5rem;
        }
        .calorie-progress-bar {
            width: 100%;
            background: #e5e7eb;
            border-radius: 16px;
            height: 32px;
            margin-bottom: 24px;
            position: relative;
            overflow: hidden;
        }
        .calorie-progress-bar-inner {
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
            height: 100%;
            border-radius: 16px 0 0 16px;
            transition: width 0.5s;
            display: flex;
            align-items: center;
            color: #fff;
            font-weight: 600;
            font-size: 1.1em;
            padding-left: 18px;
        }
        .calorie-progress-label {
            position: absolute;
            width: 100%;
            left: 0;
            top: 0;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            color: #222;
            font-size: 1.1em;
            pointer-events: none;
        }
        .user-info {
            background: #f3f4f6;
            border-radius: 8px;
            padding: 12px 20px;
            margin-bottom: 1.5rem;
            color: #333;
            font-size: 1.05em;
        }
        .user-info span {
            display: inline-block;
            margin-right: 18px;
        }
        .progress-grid {
            display: flex;
            gap: 32px;
        }
        .progress-col {
            flex: 1;
            min-width: 320px;
        }
        .progress-card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            margin-bottom: 24px;
            padding: 0;
            overflow: hidden;
        }
        .progress-card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: #f7f7f7;
            padding: 12px 20px;
            font-weight: 600;
            color: #222;
            border-bottom: 1px solid #eee;
        }
        .progress-card-header a {
            color: #2563eb;
            font-size: 0.95em;
            text-decoration: none;
            font-weight: 600;
        }
        .progress-card-header a:hover {
            text-decoration: underline;
        }
        .progress-table {
            width: 100%;
            border-collapse: collapse;
        }
        .progress-table td, .progress-table th {
            padding: 10px 20px;
            border-bottom: 1px solid #f0f0f0;
        }
        .progress-table tr:last-child td {
            border-bottom: none;
        }
        .lock-icon {
            color: #fbbf24;
            font-size: 1.1em;
            margin-left: 6px;
        }
        .progress-badge {
            display: inline-block;
            background: #f3f4f6;
            color: #222;
            border-radius: 12px;
            padding: 2px 10px;
            font-size: 0.95em;
            margin-left: 8px;
        }
        .progress-badge.no {
            background: #fee2e2;
            color: #b91c1c;
        }
        @media (max-width: 900px) {
            .progress-grid {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
{% include 'navbar.html.twig' %}
<div class="progress-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="progress-title">Your Fitness Goals</div>
        <a href="{{ path('app_daily_nutrition_index') }}" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Daily Nutrition
        </a>
    </div>
    <div class="progress-subtitle">
        Need help tracking your goals?
        
    </div>
    {# Calorie Progress Bar #}
    {% set calories_today = goals.calories|default(0) %}
    {% set calorie_goal = user_info.calorie_goal|default(calories_today) %}
    {% set progress = calorie_goal > 0 ? (calories_today / calorie_goal * 100) : 0 %}
    <div class="calorie-progress-bar">
        <div class="calorie-progress-bar-inner" style="width: {{ progress > 100 ? 100 : progress }}%;"></div>
        <div class="calorie-progress-label">
            {{ calories_today|number_format(0) }} / {{ calorie_goal|number_format(0) }} kcal
        </div>
    </div>
    <div class="progress-grid">
        <div class="progress-col">
            <div class="progress-card">
                <div class="progress-card-header">
                    Daily Nutrition Goals
                   
                </div>
                <table class="progress-table">
                    <tr>
                        <td>Calories</td>
                        <td style="text-align:right">{{ goals.calories|number_format(0) }} / {{ user_info.calorie_goal|number_format(0) }} kcal</td>
                    </tr>
                    <tr>
                        <td>Carbohydrates</td>
                        <td style="text-align:right">{{ goals.carbs.g|number_format(0) }} g / {{ goals.carbs.target|number_format(0) }} g</td>
                    </tr>
                    <tr>
                        <td>Fats</td>
                        <td style="text-align:right">{{ goals.fats.g|number_format(0) }} g / {{ goals.fats.target|number_format(0) }} g</td>
                    </tr>
                    <tr>
                        <td>Proteins</td>
                        <td style="text-align:right">{{ goals.proteins.g|number_format(0) }} g / {{ goals.proteins.target|number_format(0) }} g</td>
                    </tr>
                
                </table>
            </div>
            <div class="progress-card">
                <div class="progress-card-header">
                    Calories per meal
                
                </div>
                <table class="progress-table">
                    {% for meal in meals %}
                    <tr>
                        <td>{{ meal }}</td>
                        <td style="text-align:right">
                            {% set meal_key = meal|lower %}
                            {{ calories_per_meal[meal_key].calories|default(0)|number_format(0) }} kcal
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
           
        </div>
        <div class="progress-col">
            <div class="progress-card">
                <div class="progress-card-header">
                    Micronutrients
                  
                </div>
                <table class="progress-table">
                    {% for micro in micronutrients %}
                    <tr>
                        <td>{{ micro.label }}</td>
                        <td style="text-align:right">{{ micro.value }} / {{ micro.target }}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
</div>
<!-- FontAwesome for lock icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
{% endblock %} 